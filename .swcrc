{
  "$schema": "https://swc.rs/schema.json",
  "module": {
    "type": "nodenext",
    "resolveFully": true
  },
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true,
      "exportDefaultFrom": true
    }
  },
  "env": {
    "targets": {
      "node": 22
    }
  },
  "sourceMaps": true
}
