{
  "name": "l10n-tools-core",
  "version": "7.2.0",
  "description": "Localization tools - Core library and infrastructure",
  "type": "module",
  "engines": {
    "node": ">=22.19.0",
    "npm": ">=10.9.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "node --no-warnings=ExperimentalWarning --loader ts-node/esm --test \"src/**/*.test.ts\"",
    "schema": "ts-json-schema-generator -p 'src/**/*.ts' -e all -t L10nConf --no-top-ref -o l10nrc.schema.json"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./plugin-types": {
      "types": "./dist/plugin-types.d.ts",
      "import": "./dist/plugin-types.js"
    }
  },
  "files": [
    "dist",
    "l10nrc.schema.json"
  ],
  "dependencies": {
    "npmlog": "^7.0.1",
    "tinyglobby": "^0.2.15"
  },
  "devDependencies": {
    "@types/npmlog": "^7.0.0",
    "ts-json-schema-generator": "^2.4.0"
  },
  "author": "Eungkyu Song <eungkyu@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tpcint/l10n-tools.git",
    "directory": "packages/core"
  }
}
