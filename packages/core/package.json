{
  "name": "l10n-tools-core",
  "version": "7.0.0",
  "description": "Localization tools - Core CLI and infrastructure",
  "type": "module",
  "engines": {
    "node": ">=22.19.0",
    "npm": ">=10.9.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "node --no-warnings=ExperimentalWarning --loader ts-node/esm --test \"src/**/*.test.ts\"",
    "schema": "ts-json-schema-generator -p 'src/**/*.ts' -e all -t L10nConf --no-top-ref -o l10nrc.schema.json"
  },
  "bin": {
    "l10n": "dist/l10n.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./plugin-types": {
      "types": "./dist/plugin-types.d.ts",
      "import": "./dist/plugin-types.js"
    }
  },
  "files": [
    "dist",
    "l10nrc.schema.json"
  ],
  "dependencies": {
    "ajv": "^8.17.1",
    "command-exists": "^1.2.9",
    "commander": "^14.0.1",
    "cosmiconfig": "^9.0.0",
    "es-toolkit": "^1.44.0",
    "npmlog": "^7.0.1",
    "tinyglobby": "^0.2.15"
  },
  "devDependencies": {
    "@types/command-exists": "^1.2.3",
    "@types/npmlog": "^7.0.0",
    "ts-json-schema-generator": "^2.4.0"
  },
  "peerDependencies": {
    "l10n-tools-plugin-android": "^7.0.0",
    "l10n-tools-plugin-ios": "^7.0.0",
    "l10n-tools-extractor-javascript": "^7.0.0",
    "l10n-tools-extractor-vue": "^7.0.0",
    "l10n-tools-extractor-python": "^7.0.0",
    "l10n-tools-extractor-php": "^7.0.0",
    "l10n-tools-compiler-json": "^7.0.0",
    "l10n-tools-compiler-gettext": "^7.0.0",
    "l10n-tools-syncer-lokalise": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "l10n-tools-plugin-android": { "optional": true },
    "l10n-tools-plugin-ios": { "optional": true },
    "l10n-tools-extractor-javascript": { "optional": true },
    "l10n-tools-extractor-vue": { "optional": true },
    "l10n-tools-extractor-python": { "optional": true },
    "l10n-tools-extractor-php": { "optional": true },
    "l10n-tools-compiler-json": { "optional": true },
    "l10n-tools-compiler-gettext": { "optional": true },
    "l10n-tools-syncer-lokalise": { "optional": true }
  },
  "author": "Eungkyu Song <eungkyu@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tpcint/l10n-tools.git",
    "directory": "packages/core"
  }
}
